<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateChallenge">



    <ImageView
        android:layout_width="299dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/create_challenge" />

    <ImageView
        android:id="@+id/third"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_above="@+id/description_icon"
        android:layout_marginEnd="-110dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/textView10"
        android:onClick="thirdImgClick"
        android:src="@drawable/ic_baseline_food_bank_24" />

    <ImageView
        android:id="@+id/fourth"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_above="@+id/description_icon"
        android:layout_marginEnd="-165dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/textView10"
        android:onClick="fourthImgClick"
        android:src="@drawable/ic_baseline_sports_football_24" />

    <ImageView
        android:id="@+id/fifth"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_above="@+id/description_icon"
        android:layout_marginEnd="-221dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/textView10"
        android:onClick="fifthImgClick"
        android:src="@drawable/ic_baseline_timer_24" />


    <ImageView
        android:id="@+id/second"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_above="@+id/description_icon"
        android:layout_marginEnd="-55dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/textView10"
        android:onClick="secondImgClick"
        android:src="@drawable/ic_baseline_date_range_24" />

    <ImageView
        android:id="@+id/first"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_above="@+id/description_icon"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/textView10"
        android:onClick="firstImgClick"
        android:src="@drawable/ic_baseline_accessibility_24" />

    <EditText
        android:id="@+id/challengeName"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="142dp"
        android:hint="Enter title"
        android:inputType="text" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@drawable/just_create"
        android:onClick="createBtnClick2" />

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="105dp"
        app:srcCompat="@drawable/title_icon" />

    <ImageView
        android:id="@+id/description_icon"
        android:layout_width="376dp"
        android:layout_height="312dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="137dp"
        app:srcCompat="@drawable/description_icon" />

    <EditText
        android:id="@+id/description"
        android:layout_width="251dp"
        android:layout_height="119dp"
        android:layout_alignBottom="@+id/description_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="307dp"
        android:hint="Describe the activity or \nspecify the task"
        android:inputType="text"
        android:lines="2"
        android:paddingBottom="1dp"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description_icon"
        android:layout_alignEnd="@+id/challengeName"
        android:layout_marginEnd="54dp"
        android:textColor="@color/black"
        android:fontFamily="@font/georgia"
        android:layout_marginBottom="47dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Select Category" />


</RelativeLayout>