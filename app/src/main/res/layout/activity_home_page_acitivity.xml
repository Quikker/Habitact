<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/general_background"
    android:padding="16dp"
    tools:context=".HomePageActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/storeButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/store"
        android:onClick="storeMenu"
        android:textSize="20dp" />
    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginTop="278dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/georgia"
        android:textStyle="bold"
        android:text="STORE"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/georgia"
        android:textStyle="bold"
        android:text="CHALLENGES"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="340dp"
        android:fontFamily="@font/georgia"
        android:textStyle="bold"
        android:text="RANKINGS"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="320dp"
        android:fontFamily="@font/georgia"
        android:textStyle="bold"
        android:text="WEEKLY PLAN"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/statisticsButton"
        android:layout_width="122dp"
        android:layout_height="109dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ranking"
        android:onClick="statisticsMenu"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/challengesButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/challenge"
        android:onClick="challengesMenu"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/weeklyPlanButton"
        android:layout_width="146dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/weekly_calendar"
        android:onClick="weeklyPlanMenu"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="casual"
        android:text="HabitAct"
        android:textColor="@color/habitact_title_color"
        android:textSize="80dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="244dp"
        android:layout_height="301dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/fox_avatar" />

    <ImageView
        android:id="@+id/topItem"
        android:layout_width="140dp"
        android:layout_height="118dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="596dp" />

    <ImageView
        android:id="@+id/botItem"
        android:layout_width="244dp"
        android:layout_height="301dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />



    <ImageView
        android:id="@+id/dressItem"
        android:layout_width="244dp"
        android:layout_height="301dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/hatItem"
        android:layout_width="244dp"
        android:layout_height="301dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/shoesItem"
        android:layout_width="244dp"
        android:layout_height="301dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingsButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/settings"
        android:onClick="settingsMenu" />



</RelativeLayout>